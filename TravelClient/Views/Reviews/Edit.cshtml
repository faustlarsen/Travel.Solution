<h1>Edit Info:</h1>
<form action="/Reviews/Details/@(Model.ReviewId)" method="post">
  <label for="reviewtext">Review</label>
  <input id="reviewtext" name="reviewtext" type="text" value="@(Model.ReviewText)">
  <label for="country">Country</label>
  <input id="country" name="country" type="text" value="@(Model.Country)">
  <label for="city">City</label>
  <input id="city" name="city" type="text" value="@(Model.City)">
  <label for="author">Author</label>
  <input id="author" name="author" type="text" value="@(Model.Author)">
  <label for="rating">Rating</label>
  <input id="rating" name="rating" type="number" value="@(Model.Rating)">
  <button type="submit">Go!</button>
</form>

<a href="/Reviews/Details/@(Model.ReviewId)"><p>Return to Details</p></a>

