@{
    ViewData["Title"] = "Home Page";
}

<h1>New Review:</h1>

<form action="/reviews" method="post">
    <label for="country">Country</label>
    <input id="country" name="country" type="text">
    <label for="city">City</label>
    <input id="city" name="city" type="text">
    <label for="reviewtext">ReviewText</label>
    <input id="reviewtext" name="reviewtext" type="text">
    <label for="author">Author</label>
    <input id="author" name="author" type="text">
    <label for="rating">Rating</label>
    <input id="rating" name="rating" type="number">
    <button type="submit">Go!</button>
</form>

<h1>All Reviews:</h1>

<ol>
@foreach (Review review in Model)
{
    <ul>
        <li>ID: @review.ReviewId</li>
        <li>Country: @review.Country</li>
        <li>city: @review.City</li>
        <li>Text: @review.ReviewText</li>
        <li>Author: @review.Author</li>
        <li>Rating: @review.Rating</li>
    </ul>
    <a href="/Reviews/Details/@(review.ReviewId)"><p>View Details</p></a>
    <br>
}
</ol>